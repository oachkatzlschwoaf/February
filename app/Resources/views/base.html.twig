<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/jquery.fancybox-1.3.4.css') }}" type="text/css" media="screen" />

            <link href="{{ asset('css/style.css') }}" rel="stylesheet" type="text/css">
            <link href="{{ asset('css/stuff.css') }}" rel="stylesheet" type="text/css">
            <!--[if lte IE 7]><link href="{{ asset('css/ie7.css') }}" rel="stylesheet" type="text/css" /><![endif]-->
            <!--[if lte IE 8]>
            <link href="{{ asset('css/ie8.css') }}" rel="stylesheet" type="text/css" />
            <script type="text/javascript" src="js/PIE.js"></script>
            <script type="text/javascript" src="js/html5support.js"></script>
            <![endif]-->

        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block javascripts %}
            <script src="{{ asset('js/jquery.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/jquery.fancybox-1.3.4.pack.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/es5-sham.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/es5-shim.min.js') }}" type="text/javascript"></script>
            <script src="http://cdn.connect.mail.ru/js/loader.js" type="text/javascript"></script>

            <script src="{{ asset('js/main.js') }}?v=7" type="text/javascript"></script>
            <script src="{{ asset('js/models.js') }}?v=7" type="text/javascript"></script>
            <script src="{{ asset('js/views.js') }}?v=7" type="text/javascript"></script>
            <script src="{{ asset('js/controllers.js') }}?v=7" type="text/javascript"></script>
        {% endblock %}
        <div class="wrapper" style="margin-top: 10px;">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
