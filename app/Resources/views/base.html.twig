<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/jquery.fancybox-1.3.4.css') }}" type="text/css" media="screen" />

            <style>
                .friends_container {
                    border: 1px solid black; 
                    width: 700px; 
                    overflow: hidden
                }

                .friends_container div { 
                    margin: 5px; 
                    float: left;
                    min-width: 140px;
                    min-height: 140px;
                    font-size: 11px;
                    border: 1px solid gray;
                }

                .gifts_container {
                    border: 1px solid blue; 
                    width: 600px; 
                    overflow: hidden
                }

                .gifts_container div { 
                    margin: 5px; 
                    float: left;
                    min-width: 140px;
                    min-height: 140px;
                    font-size: 11px;
                    border: 1px solid gray;
                }

                .gifts_list img {
                    margin: 10px; 
                    float: left;
                }
            </style>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block javascripts %}
            <script src="{{ asset('js/jquery.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/jquery.fancybox-1.3.4.pack.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/main.js') }}" type="text/javascript"></script>
        {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
